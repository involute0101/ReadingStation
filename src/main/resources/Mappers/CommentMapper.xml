<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dbtest.dao.CommentMappers">
    <select id="selectComment" resultMap="commentResultMap">
        select *from commentDb
        inner join accountDb on commentDb.account=accountDb.account
        where bookName=#{bookName}
    </select>
    <resultMap id="commentResultMap" type="com.dbtest.entity.Comment">
        <result property="id" column="id" javaType="java.lang.Integer"></result>
        <result property="bookName" column="bookName" javaType="java.lang.String"></result>
        <result property="isDescription" column="isDescription" javaType="java.lang.Integer"></result>
        <result property="content" column="content" javaType="java.lang.String"></result>
        <association property="sender" javaType="com.dbtest.entity.Account" column="account" select="com.dbtest.dao.AccountMappers.selectByAccount" fetchType="lazy"></association>
        <!--这里可能有问题-->
    </resultMap>
    <insert id="insertComment" parameterType="com.dbtest.entity.Comment">
        insert into commentdb(content,account,bookName,isDescription)
        values (#{content},#{account},#{bookName},#{isDescription})
    </insert>
</mapper>